@page
@model Rajwinder_shopping_centre.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}
<!--this page shows the information about how to create a product list-->

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Product_Name" class="control-label">Product Name</label>
                <input asp-for="Product.Product_Name" class="form-control" />
                <span asp-validation-for="Product.Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Description" class="control-label">Product Description</label>
                <input asp-for="Product.Product_Description" class="form-control" />
                <span asp-validation-for="Product.Product_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Type" class="control-label">Product Type</label>
                <input asp-for="Product.Product_Type" class="form-control" />
                <span asp-validation-for="Product.Product_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Material" class="control-label">Product Material</label>
                <input asp-for="Product.Product_Material" class="form-control" />
                <span asp-validation-for="Product.Product_Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Color" class="control-label">Prduct Color</label>
                <input asp-for="Product.Product_Color" class="form-control" />
                <span asp-validation-for="Product.Product_Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Size" class="control-label">Product Size</label>
                <input asp-for="Product.Product_Size" class="form-control" />
                <span asp-validation-for="Product.Product_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Rating" class="control-label">Product Rating</label>
                <input asp-for="Product.Product_Rating" class="form-control" />
                <span asp-validation-for="Product.Product_Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Price" class="control-label">Product Price</label>
                <input asp-for="Product.Product_Price" class="form-control" />
                <span asp-validation-for="Product.Product_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.BrandId" class="control-label"></label>
                <select asp-for="Product.BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
